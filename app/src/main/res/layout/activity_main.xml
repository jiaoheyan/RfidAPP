<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.hb.jensenhaw.rfidapp.MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide"
        android:layout_width="match_parent"
        android:layout_height="432px"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400px"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_point_group"
            android:orientation="horizontal"
            >
        </LinearLayout>

        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:id="@+id/viewRedPoint"
            android:background="@drawable/shape_point_red"/>
    </RelativeLayout>
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_weight="0.09">


        <Button
            android:id="@+id/qrBtn"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginLeft="70px"
            android:layout_marginTop="50px"
            android:background="@drawable/saomiaotiaoma" />

        <Button
            android:id="@+id/rfidBtn"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginLeft="300px"
            android:layout_marginTop="50px"
            android:background="@drawable/rfidma" />

        <Button
            android:id="@+id/enMoBtn"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginLeft="520px"
            android:layout_marginTop="50px"
            android:background="@drawable/hjjc" />


        <Button
            android:id="@+id/logistcsBtn"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginLeft="70px"
            android:layout_marginTop="250px"
            android:background="@drawable/zhuisuxiaoche" />

        <Button
            android:id="@+id/visionBtn"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginLeft="300px"
            android:layout_marginTop="250px"
            android:background="@drawable/syjk" />

        <Button
            android:id="@+id/setBtn"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginLeft="520px"
            android:layout_marginTop="250px"
            android:background="@drawable/shezhi" />

    </RelativeLayout>

    <Button
        android:id="@+id/exitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_button"
        android:textColor="@color/white"
        android:text="退出" />
</LinearLayout>
